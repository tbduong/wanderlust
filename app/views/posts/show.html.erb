<br>
<div class="large-8 text-center center">
  <div class="callout">
    <h1> <%= @post.title %> </h1>
    <%= link_to 'Edit Post', edit_post_path(@post), class:'button hollow' %>
    <%= link_to 'Delete', destroy_post_path, method: :delete, class:'button hollow' %>
    <p>
      Posted: <%= @post.created_at %> by <%= @post.user_id %>
    </p>
    <img src=" <%= @post.image %>" class="" alt="">
    <p> <%= @post.text %></p>
  </div>

</div>
