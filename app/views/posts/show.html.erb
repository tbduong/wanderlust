<br>
<div class="large-8 text-center">
  <div class="callout">
    <h1> <%= @post.title %> </h1>
    <%= link_to 'Edit Post', edit_post_path(@post), class:'button hollow' %>
    <%= link_to 'Delete', destroy_post_path, method: :delete, class:'button hollow' %>
    <p>
      Posted: <%= @post.created_at %> by <%= link_to "#{@post.user.first_name} #{@post.user.last_name}", user_path(current_user) %>
    </p>
    <img src= "<%= @post.image %>">
    <p> <%= @post.text %></p>
    <p>
      <%= @post.tag_list %>
    </p>
  </div>
</div>
