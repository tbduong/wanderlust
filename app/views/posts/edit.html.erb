<br>
<div class="large-7 large-centered text-center">
  <div class="callout">
    <h1 class="form-title"> Edit this Post </h1>
    <%= form_for @post do |post| %>
    <div>
      <h3><%= post.text_field :title, placeholder: "Title your adventure...",  class: "form-field"%></h3>
    </div>
    <div>
      <h3><%= post.text_area :text, placeholder: "Share your experience!....",  class: "form-field"%></h3>
    </div>
    <div>
      <h3><%= post.select :location, [
        ["Austria"], ["Australia"], ["Belgium"], ["Brazil"], ["Chile"],["Croatia"],["France"],["Germany"],["Greece"],["Iceland"], ["India"], ["Italy"],["Spain"],["Thailand"], ["Vietnam"],["United Kingdom"],["USA"]
        ], :include_blank => false, :prompt => "Choose a Location" %></h3>
    </div>
    <div>
      <h3><%= post.select :category, [["Art"], ["Backpacking"], ["Beach"], ["City"], ["Food/Dining"],["Mountains"], ["Nature"], ["Nightlife"], ["Resort"] ], :include_blank => false, :prompt => "Choose a Category"%></h3>
    </div>
    <div>
      <h5><%= post.uploadcare_uploader :image, :data => {:images_only => true, :crop => "500x500 minimum", :image_shrink => "500x500", :clearable => true } %>
      </h5>
    </div>

    <%= post.submit "Save Changes", :class => "button signup hollow" %>
    <% end %>
  </div>
</div>
