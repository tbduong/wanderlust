<h1 class="text-center"> Global Feed </h1>
<div class="large-7 columns">
  <%= search_form_for @q do |f| %>
    <div class="field">
      <label for="">Search</label>
      <%= f.text_field :title %>
    </div>
    <%= f.submit "Search", class:"button hollow" %>
  <% end %>
</div>

  <div class="row small-up-1 medium-up-2 large-up-3">

  <% @search.each do |post|%>
  <div class="column">
    <div class="callout">

    <h4 class="text-center"> <%= link_to "#{post.title}", post_path(post) %></h4>
    <p class="text-center"><%= post.location_id %></p>
    <img src=" <%= post.image %>" class="thumbnail">
    <p class="body-text"> <%= post.text %></p>
    <p>
      Posted by: <%= link_to "#{post.user.first_name} #{post.user.last_name}", user_path(current_user) %> on <%= post.created_at%>
    </p>
  </div>
  <%= link_to like_post_path([post]), method: :put do %>
  <i class="fi-heart"></i>
  <%= post.get_upvotes.size %>
  </div>
  <% end %>
  <% end %>
</div>
